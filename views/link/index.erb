<link rel="stylesheet" type="text/css" href="/style.css">

<ul>
<% @links.each do |link| %>
  <li><a href="<%="https://#{link['url']}"%>"><%="#{link['title']}"%></a>
  <div>
  <div>
    <form action='/link/delete' method="post">
      <input type="hidden" value="<%="#{link['title']}"%>" name="deletelinktitle">
      <input type="submit" value="Delete">
    </form>
  </div>
  <div>
    <form action='/link/update' method="post">
      <input type="hidden" value="<%="#{link['id']}"%>" name="id">
      <input type="submit" value="Edit">
    </form>
  </div>
  </div>
  </li>

<% end %>
</ul>

<form action='/link/new' method=post>
  <label for="url">URL</label>
  <input type="text" name="addlink"> 
  <label for="title">Title</label>
  <input type="text" name="addtitle"> 
  <input type="submit" value="Add Link">
</form>

