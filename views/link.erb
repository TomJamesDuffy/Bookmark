<link rel="stylesheet" type="text/css" href="/style.css">

<ul>
<% @links.each do |link| %>
  <li><a href="<%="https://#{link['url']}"%>"><%="#{link['title']}"%></a></li>

    <form action='/delete-link' method="post">
      <input type="hidden" value="<%="#{link['title']}"%>" name="deletelinktitle">
      <input type="submit" value="Delete">
    </form>

    <form action='/update-link' method="post">
      <input type="hidden" value="<%="#{link['url']}|#{link['title']}"%>" name="id">
      <input type="submit" value="Edit">
    </form>

<% end %>
</ul>

<form action='/create-new-link' method=post>
  <label for="url">URL</label>
  <input type="text" name="addlink"> 
  <label for="title">Title</label>
  <input type="text" name="addtitle"> 
  <input type="submit" value="Add Link">
</form>

